<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/history_cardView"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/chat_msg_shape"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="13dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/paytm"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/paytmReward"
                android:text=" Paytm Reward :  â‚¹1 "
                android:textSize="17sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:fontFamily="@font/airbnb_cereal_medium"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/paytmDate"
                android:text=" XX-XX-XXXX "
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:fontFamily="@font/airbnb_cereal_medium"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/paytmNum"
                android:text=" Paytm : 9999XXXXXX"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:fontFamily="@font/airbnb_cereal_medium"
                android:textColor="#2196F3"
                />

            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/paytmDetail"
                android:text=" Transaction : Successful"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:fontFamily="@font/airbnb_cereal_medium"
                android:textColor="@color/textGreen2"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>