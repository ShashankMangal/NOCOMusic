<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.OffersScreen">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:id="@+id/offersToolbar"
        android:layout_height="wrap_content"
        android:background="@color/themeGreen"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="9dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="@color/ncshindinewcolor"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:id="@+id/offers_arrow_back"
            app:tint="@color/ncshindinewcolor"
            />

    </androidx.appcompat.widget.Toolbar>


    <Button
        android:id="@+id/offersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Offers"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offersToolbar"
        android:textStyle="bold"
        android:textColor="@color/ncshindinewcolor"
        android:textSize="18sp"
        android:background="@drawable/payment_input_gold"
        />

    <Button
        android:id="@+id/megaCoinButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mega Offer 1 (500 coins)"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offersButton"
        android:textStyle="bold"
        android:textColor="@color/ncshindinewcolor"
        android:textSize="18sp"
        android:background="@drawable/payment_input_gold"
        />

    <Button
        android:id="@+id/megaCoinAdmobButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mega Offer 2 (500 coins)"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/megaCoinButton"
        android:textStyle="bold"
        android:textColor="@color/ncshindinewcolor"
        android:textSize="18sp"
        android:background="@drawable/payment_input_gold"
        />






</androidx.constraintlayout.widget.ConstraintLayout>
</layout>