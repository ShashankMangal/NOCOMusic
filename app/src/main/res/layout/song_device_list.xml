<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="6dp"
    android:background="@drawable/songlistbg"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="@drawable/songlistbg"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ncsLogoInSongList"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/musicicon"
            app:civ_border_color="@color/ncshindinewcolor"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@color/themeGreen"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textSong"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:padding="6dp"
            android:textColor="@color/ncshindinewcolor"
            android:layout_marginEnd="10dp"
            android:text="Song Name"
            android:textSize="17sp"
            android:fontFamily="@font/airbnb_cereal_bold"
            android:textStyle="bold"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>