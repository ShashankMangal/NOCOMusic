<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_community_const"
    android:background="@drawable/gradient_list_2"
    tools:context=".Fragment.CommunityFragment">

    <Button
        android:id="@+id/telegramChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="#26b0e5"
        android:text="Telegram"
        app:layout_constraintEnd_toStartOf="@+id/subscribe_yt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/subscribe_yt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/textRed"
        android:text="Subscribe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/telegramChat"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subscribe_yt"
        >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="3"
     >

        <androidx.cardview.widget.CardView
            android:id="@+id/appStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:layout_margin="2dp"
                android:padding="20dp"
                android:background="@color/themeYellow"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/piechart" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:padding="6dp"
                    android:drawableRight="@drawable/ic_baseline_play"
                    android:drawableTint="@color/ncshindinewcolor"
                    android:background="@drawable/communityitemtextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Stats"
                    android:textAlignment="center"
                    android:textColor="@color/ncshindinewcolor"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/wallpaperSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"

            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:layout_margin="2dp"
                android:padding="20dp"
                android:background="@color/themeYellow"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wallpapericon" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:padding="6dp"
                    android:drawableRight="@drawable/ic_baseline_play"
                    android:drawableTint="@color/ncshindinewcolor"
                    android:background="@drawable/communityitemtextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wallpapers"
                    android:textAlignment="center"
                    android:textColor="@color/ncshindinewcolor"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/downloadPlaySongs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/themeYellow"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:layout_margin="2dp"
                android:padding="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/musicicon" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:padding="6dp"
                    android:drawableRight="@drawable/ic_baseline_play"
                    android:drawableTint="@color/ncshindinewcolor"
                    android:background="@drawable/communityitemtextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NCS Player"
                    android:textAlignment="center"
                    android:textColor="@color/ncshindinewcolor"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/sponsorBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/themeYellow"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:layout_margin="2dp"
                android:padding="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sponsor" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:padding="6dp"
                    android:drawableRight="@drawable/ic_baseline_play"
                    android:drawableTint="@color/ncshindinewcolor"
                    android:background="@drawable/communityitemtextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sponsor"
                    android:textAlignment="center"
                    android:textColor="@color/ncshindinewcolor"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/coinsReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/themeYellow"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:layout_margin="2dp"
                android:padding="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/coin" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:padding="6dp"
                    android:drawableRight="@drawable/ic_baseline_play"
                    android:drawableTint="@color/ncshindinewcolor"
                    android:background="@drawable/communityitemtextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Earn Coins"
                    android:textAlignment="center"
                    android:textColor="@color/ncshindinewcolor"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/offerWall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/themeYellow"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:layout_margin="2dp"
                android:padding="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/discount" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:padding="6dp"
                    android:drawableRight="@drawable/ic_baseline_play"
                    android:drawableTint="@color/ncshindinewcolor"
                    android:background="@drawable/communityitemtextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offer Wall"
                    android:textAlignment="center"
                    android:textColor="@color/ncshindinewcolor"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </GridLayout>\
    </RelativeLayout>
    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>